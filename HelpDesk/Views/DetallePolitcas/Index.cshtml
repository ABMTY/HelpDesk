
@{
    ViewBag.Title = "Index";
}

<!--Contenido-->
<div class="row">
    <div class="col-md-12">
        <div class="box">
            <!--header -->
            <div class="box-header with-border">
                <h1 class="box-title">
                    Detalle de las Políticas
                </h1>
                <div class="box-tools pull-right">
                    <button class="btn btn-primary" onclick="Agregar()" id="btnAgregar">
                        <i class="fa fa-plus-circle"></i> Agregar
                    </button>
                </div>
            </div>
            <!-- Fin header -->
            <!-- body -->
            <div class="panel-body table-responsive" id="secc_lista">
                <div class="card-box">
                    <table id="Lista_DetallePoliticas" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Opciones</th>
                                <th>Política</th>
                                <th>Prioridad</th>
                                <th>Horas Minima</th>
                                <th>Horas Maxima</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

            <div class="panel-body" id="secc_add" style="display:none;">
                <input type="text" id="id" value="" hidden />
                <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <label>Política *</label>
                    <div>
                        <select class="form-control selectpicker" id="ddl_Politicas" required data-live-search="true"></select>
                    </div>
                </div>
                <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <label>Prioridad *</label>
                    <div>
                        <select class="form-control selectpicker" id="ddl_Prioridades" required data-live-search="true"></select>
                    </div>
                </div>
                <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <label>Tiempo Minimo Hrs *</label>
                    <input type="text" class="form-control" id="txt_Tiempomin" maxlength="100" required>
                </div>
                <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <label>Tiempo Maximo Hrs *</label>
                    <input type="text" class="form-control" id="txt_Tiempomax" maxlength="100" required>
                </div>
              
                <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-primary" type="submit" id="btnGuardar" onclick="Guardar()">
                        <i class="fa fa-save"></i> Guardar
                    </button>
                    <button class="btn btn-default" onclick="Cancelar()" type="button">
                        <i class="fa fa-arrow-circle-left"></i> Cancelar
                    </button>
                </div>
            </div>
            <!--Fin body -->
        </div><!-- /.box -->
        <!-- Modal Eliminar -->
        <div class="modal fade" id="Form_DeleteTipo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="mensaje_modal">Eliminar Detalle de la Política</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body ">
                        <form role="form" data-toggle="validator">
                            <h4 id="lbl_msjborrar"></h4>
                            <span id="txt_idborrar" style="display:none;"></span>
                        </form>

                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" onclick="Eliminar(); return false;"><i class="fa fa-check" aria-hidden="true"></i> SÍ</button>
                        <button class="btn btn-danger" onclick="Cancelar()" ; return false;" data-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i> NO</button>
                    </div>
                </div>
            </div>
        </div>

    </div><!-- /.col -->
</div><!-- /.row -->
<!--Fin-Contenido-->

<script>

    $(document).ready(function () {
        $('#Lista_DetallePoliticas').DataTable();
        Detalles_Politicas();
    });

    function Detalles_Politicas() {
        $('#Lista_DetallePoliticas').DataTable({
            destroy: true,
            searching: true,
            "ajax": {
                "url": "/DetallePoliticas/GetDetallePoliticas/",
                "type": "GET"
            },
            "columns": [
                { "defaultContent": "<i>..</i>" },
                { "data": "politica" },
                { "data": "prioridad" },
                { "data": "tiempo_min" },
                { "data": "tiempo_max" },
            ],
            "columnDefs": [
                {
                    "targets": 0, "data": "id_detalle_politica", "render": function (data, type, full, meta) {
                        return "<button type='button' title='Editar' id='btn_mas" + data + "' class='btn btn-warning' onclick='Editar(" + data + ")'  ><i class='fa fa-edit'></i></button>  <button type='button' title='Eliminar' id='btn_borrar" + data + "' class='btn btn-danger' onclick='Confirma_Eliminar(" + data + ")'><i class='fa fa-trash'></i></button> "
                    }
                }]
        });
    }

    function Agregar() {
        $("#secc_lista").hide();
        $("#secc_add").show();
        $("#btnAgregar").hide();
        Limpiar();
        Cargar_Politicas();
        Cargar_Prioridades();
    }

    function Cancelar() {
        $("#secc_lista").show();
        $("#btnAgregar").show();
        $("#secc_add").hide();
    }

    function Limpiar() {
        $("#id").val("");        
        $("#ddl_Politicas").html();
        $("#ddl_Prioridades").html();
        $("#txt_Tiempomin").val("");
        $("#txt_Tiempomax").val("");
    }

    function Cargar_Politicas() {

        $("#ddl_Politicas").html("");

        $.ajax({
            url: "/Politicas/GetPoliticas/",
            async: true,
            dataType: "json",
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $.each(data.data, function (i, Item) {
                    $("#ddl_Politicas").append("<option value='" + Item.id_politica + "'>" + Item.nombre + "</option>");
                });
                $('#ddl_Politicas').selectpicker('refresh');
            },
            error: function (request, status, error) {
                console.log("error" + error);
            }
        });
    }

    function Cargar_Prioridades() {

        $("#ddl_Prioridades").html("");

        $.ajax({
            url: "/Prioridad/GetPrioridades/",
            async: true,
            dataType: "json",
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $.each(data.data, function (i, Item) {
                    $("#ddl_Prioridades").append("<option value='" + Item.id_prioridad + "'>" + Item.nombre + "</option>");
                });
                $('#ddl_Prioridades').selectpicker('refresh');
            },
            error: function (request, status, error) {
                console.log("error" + error);
            }
        });
    }

    function Editar(id_sucursal) {
        $.ajax({
            url: "/Sucursales/GetSucursal/",
            async: true,
            dataType: "json",
            data: '{ id:' + id_sucursal + '}',
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                Limpiar();
                $("#secc_lista").hide();
                $("#secc_add").show();
                $("#btnAgregar").hide();
                $("#id").val(id_sucursal);                
                Cargar_Politicas();
                $("#ddl_Politicas").append("<option value=" + data.data.id_politica + ">" + data.data.politica + "</option>");
                $("#ddl_Politicas").selectpicker('refresh');
                Cargar_Prioridades();
                $("#ddl_Prioridades").append("<option value=" + data.data.id_prioridad + ">" + data.data.prioridad + "</option>");
                $("#ddl_Prioridades").selectpicker('refresh');
                $("#txt_Tiempomin").val(data.data.tiempomin);
                $("#txt_Tiempomax").val(data.data.tiempomax);
            },
            error: function (request, status, error) {
                console.log("error" + error);
            }
        });
    }

    function Guardar() {
        Sucursal = {
            "id_detalle_politica": $("#id").val() == "" ? 0 : $("#id").val(),
            "id_politica": $("#ddl_Politicas").val(),
            "id_prioridad": $("#ddl_Prioridades").val(),
            "tiempo_min": $("#txt_Tiempomin").val(),
            "tiempo_max":$("#txt_Tiempomax").val(),
        };
        $.ajax(
        {
            url: "/DetallePoliticas/Guardar/",
            async: true,
            dataType: "json",
            data: JSON.stringify(Sucursal),
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                swal({ title: "Detalle de la Politica", text: "Guardada Correctamente", type: "success" }, function () { Cargar_Sucursales(); Cancelar(); });
            },
            error: function (request, status, error) {
                swal("Error al Guardar el Detalle de la Política");
                console.log("error" + error);
            }
        });
    }

    function Confirma_Eliminar(id_detalle_politica) {
        $('#Form_DeleteTipo').modal('show');
        $("#lbl_msjborrar").html("Se va a eliminar el Detalle de la Política No. " + id_sucursal + ". <br/>¿Desea Continuar?");
        $("#txt_idborrar").text(id_detalle_politica);
    }

    function Eliminar() {
        id_detalle_politica = $("#txt_idborrar").text();
        $.ajax({
            url: "/DetallePoliticas/Eliminar/",
            async: true,
            dataType: "json",
            data: '{id:' + id_detalle_politica + '}',
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $('#Form_DeleteTipo').modal('hide');
                swal({ title: "Detalle de la Política", text: "Se elimino Correctamente", type: "success" }, function () { Cargar_Sucursales(); });
            },
            error: function (request, status, error) {
                console.log("error" + error);
            }
        });
    }

</script>

