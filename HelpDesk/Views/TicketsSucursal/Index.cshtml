
@{
    ViewBag.Title = "Index";
}

<!--Contenido-->
<div class="row">
    <div class="col-md-12">
        <div class="box">
            <!--header -->
            <div class="box-header with-border">
                <h1 class="box-title">
                    Soluciones de Tickets
                </h1>
                <div class="box-tools pull-right">
                    <button class="btn btn-primary" onclick="Agregar()" id="btnAgregar">
                        <i class="fa fa-plus-circle"></i> Crear Ticket
                    </button>
                </div>
            </div>
            <!-- Fin header -->
            <!-- body -->
            <div class="panel-body table-responsive" id="secc_lista">
                <div class="card-box">
                    <table id="Lista_Tickets" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Opciones</th>
                                <th>Sucursal</th>
                                <th>Asunto</th>
                                <th>Fecha Creacion</th>
                                <th>Estatus</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

            <div class="panel-body" id="secc_add" style="display:none;">
                <input type="text" id="id" value="" hidden />
                <div class="form-group col-lg-12 col-md-6 col-sm-6 col-xs-12">
                    <label class="control-label" for="">Sucursal *</label>
                    <div>
                        <select class="form-control selectpicker" id="ddl_Sucursal" required data-live-search="true"></select>
                    </div>
                </div>
                <div class="form-group col-lg-12 col-md-6 col-sm-6 col-xs-12">
                    <label>Asunto *</label>
                    <input type="text" class="form-control" id="txt_Asunto" placeholder="Asunto del Tiket">
                </div>
                <div class="form-group col-lg-12 col-md-6 col-sm-6 col-xs-12">
                    <label>Descripcion *</label>
                    <textarea class="textarea" id="txt_Descripcion" placeholder="Describe el Problema"
                              style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                </div>
                <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <label>Adjuntar una foto de evidencia</label>
                    <input type="file" id="subirImagen" onchange="ConvertirImagen()" value="" />
                    <p id="imgBase64" style="display: none;"></p>
                    <img src="" alt="" id="imagen" width="30%;" height="30%;" /><br />
                    <img src="" alt="" id="imagenOriginal" width="30%;" height="30%;" />
                </div>

                <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-primary" type="submit" id="btnGuardar" onclick="Guardar()">
                        <i class="fa fa-save"></i> Guardar
                    </button>
                    <button class="btn btn-default" onclick="Cancelar()" type="button">
                        <i class="fa fa-arrow-circle-left"></i> Cancelar
                    </button>
                </div>
            </div>
            <!--Fin body -->
        </div><!-- /.box -->
        <!-- Modal Eliminar -->
        <div class="modal fade" id="Form_DeleteTipo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="mensaje_modal">Eliminar Ticket</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body ">
                        <form role="form" data-toggle="validator">
                            <h4 id="lbl_msjborrar"></h4>
                            <span id="txt_idborrar" style="display:none;"></span>
                        </form>

                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" onclick="Eliminar(); return false;"><i class="fa fa-check" aria-hidden="true"></i> SÍ</button>
                        <button class="btn btn-danger" onclick="Cancelar()" ; return false;" data-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i> NO</button>
                    </div>
                </div>
            </div>
        </div>

    </div><!-- /.col -->
</div><!-- /.row -->
<!--Fin-Contenido-->


<script>

    $(document).ready(function () {
        $('#Lista_Tickets').DataTable();
        //Cargar_Tickets();
    });

    function Cargar_Tickets() {
        $('#Lista_Tickets').DataTable({
            destroy: true,
            searching: true,
            "ajax": {
                "url": "/Tickets/GetTickets/",
                "type": "GET"
            },
            "columns": [
                { "defaultContent": "<i>..</i>" },
                { "data": "id_ticket" },
                { "data": "asunto" },
                { "data": "fecha_creacion" },
                { "data": "status" },
                { "defaultContent": "<i>..</i>" },
            ],
            "columnDefs": [
                {
                    "targets": 0, "data": "id_ticket", "render": function (data, type, full, meta) {
                        return "<button type='button' title='Editar' id='btn_mas" + data + "' class='btn btn-primary' onclick='Editar(" + data + ")'  ><i class='fa fa-edit'></i></button>  <button type='button' title='Eliminar' id='btn_borrar" + data + "' class='btn btn-primary' onclick='Confirma_Eliminar(" + data + ")'><i class='fa fa-trash'></i></button> "
                    }
                },
            {
                "targets": 5, "data": "id_ticket", "render": function (data, type, full, meta) {
                    return "<button type='button' title='Seguimiento' id='btn_mas" + data + "' class='btn btn-info' onclick='Seguimiento(" + data + ")'  ><i class='fa fa-tags'></i>"
                }
            }
            ]
        });
    }

    function Agregar() {
        $("#secc_lista").hide();
        $("#secc_add").show();
        $("#btnAgregar").hide();
        Limpiar();
        Cargar_Sucursales();
    }

    function Cancelar() {
        $("#secc_lista").show();
        $("#btnAgregar").show();
        $("#secc_add").hide();
    }

    function Limpiar() {
        $("#id").val("");
        $("#txt_Asunto").val("");
        $("#txt_Descripcion").val("");
        $("#ddl_Sucursal").html("");
    }

    function Cargar_Sucursales() {
        $("#ddl_Sucursal").html("");
        $.ajax({
            url: "/Sucursal/GetSucursales/",
            async: true,
            beforeSend: function () { },
            dataType: "json",
            data: '{ }',
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                console.log(data);
                $.each(data.data, function (i, Item) {
                    $("#ddl_Sucursal").append("<option value='" + Item.id_sucursal + "'>" + Item.nombre + "</option>")
                });
                $('#ddl_Sucursal').selectpicker('refresh');
            },
            error: function (request, status, error) {
                console.log("Error => " + error);
            }
        })
    }

    function Editar(id_ticket) {
        $.ajax({
            url: "/Tickets/GetTicket/",
            async: true,
            dataType: "json",
            data: '{ id:' + id_ticket + '}',
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                Limpiar();
                $("#secc_lista").hide();
                $("#secc_add").show();
                $("#btnAgregar").hide();
                $("#id").val(id_ticket);
                $("#txt_Asunto").val(data.data.nombre);
                $("#txt_Descripcion").val(data.data.nombre);
                $("#imgBase64").text(data.data.imagen);
                Cargar_Sucursales();
                $("#ddl_Sucursal").append("<option value=" + data.data.id_sucursal + ">" + data.data.desc_sucursal + "</option>");
                $("#ddl_Sucursal").selectpicker('refresh');
                if (data.data.imagen != "") {
                    $('#imagen').css({ 'width': '0%', 'height': '0%' });
                    $('#imagenOriginal').attr('src', 'data:image/png;base64,' + data.data.imagen);
                }
            },
            error: function (request, status, error) {
                console.log("error" + error);
            }
        });
    }

    function Guardar() {
        var fecha_actual = new Date();
        Ticket = {
            "id_ticket": $("#id").val() == "" ? 0 : $("#id").val(),
            "id_usuario": 1,
            "id_sucursal": $("#ddl_Sucursal").val(),
            "asunto": $("#txt_Asunto").val(),
            "descripcion": $("#txt_Direccion").val(),
            "imagen": $("#imgBase64").text(),
            "fecha_creacion": fecha_actual,
            "status": "Abierto",
            "comentario": "x",
        };
        $.ajax(
        {
            url: "/Tickets/Guardar/",
            async: true,
            dataType: "json",
            data: JSON.stringify(Ticket),
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                swal({ title: "Tickets", text: "Guardada Correctamente", type: "success" }, function () { Cargar_Tickets(); Cancelar(); });
            },
            error: function (request, status, error) {
                swal("Error al Guardar la Usuario");
                console.log("error" + error);
            }
        });
    }

    function Confirma_Eliminar(id_ticket) {
        $('#Form_DeleteTipo').modal('show');
        $("#lbl_msjborrar").html("Se va a eliminar el Ticket No. " + id_ticket + ". <br/>¿Desea Continuar?");
        $("#txt_idborrar").text(id_ticket);
    }

    function Eliminar() {
        id_ticket = $("#txt_idborrar").text();
        $.ajax({
            url: "/Tickets/Eliminar/",
            async: true,
            dataType: "json",
            data: '{id:' + id_ticket + '}',
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $('#Form_DeleteTipo').modal('hide');
                swal({ title: "Tickets", text: "Se elimino Correctamente", type: "success" }, function () { Cargar_Tickets(); });
            },
            error: function (request, status, error) {
                console.log("error" + error);
            }
        });
    }

</script>








