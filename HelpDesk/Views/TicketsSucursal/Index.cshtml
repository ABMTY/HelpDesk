    function Editar(id_ticket) {
        $.ajax({
            url: "/Tickets/GetTicket/",
            async: true,
            dataType: "json",
            data: '{ id:' + id_ticket + '}',
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                Limpiar();
                $("#secc_lista").hide();
                $("#secc_add").show();
                $("#btnAgregar").hide();
                $("#id").val(id_ticket);
                $("#txt_Asunto").val(data.data.nombre);
                $("#txt_Descripcion").val(data.data.nombre);
                $("#imgBase64").text(data.data.imagen);
                //Cargar_Sucursales();
                //$("#ddl_Sucursal").append("<option value=" + data.data.id_sucursal + ">" + data.data.desc_sucursal + "</option>");
                //$("#ddl_Sucursal").selectpicker('refresh');
                if (data.data.imagen != "") {
                    $('#imagen').css({ 'width': '0%', 'height': '0%' });
                    $('#imagenOriginal').attr('src', 'data:image/png;base64,' + data.data.imagen);
                }
            },
            error: function (request, status, error) {
                console.log("error" + error);
            }
        });
    }

    function Seguimiento(id_ticket) {  
        '<%Session["id_ticket"] = "' + id_ticket + '"; %>'        
        window.location = "/TicketsSucursal/SeguimientoTicket?id_ticket=" + id_ticket;       
    }

    function Guardar() {
        Ticket = {
            "id_ticket": $("#id").val() == "" ? 0 : $("#id").val(),
            "id_usuario": @Session["id_usuario"],
            "id_sucursal": @Session["id_sucursal"],
            "asunto": $("#txt_Asunto").val(),
            "descripcion": $("#txt_Descripcion").val(),
            "imagen": $("#imgBase64").text(),            
        };
        $.ajax(
        {
            url: "/TicketsSucursal/Guardar/",
            async: true,
            dataType: "json",
            data: JSON.stringify(Ticket),
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                swal({ title: "Tickets", text: "Guardada Correctamente", type: "success" }, function () { Cargar_Tickets(); Cancelar(); });
            },
            error: function (request, status, error) {
                swal("Error al Guardar el Ticket");
                console.log("error" + error);
            }
        });
    }

    function Confirma_Eliminar(id_ticket) {
        $('#Form_DeleteTipo').modal('show');
        $("#lbl_msjborrar").html("Se va a eliminar el Ticket No. " + id_ticket + ". <br/>¿Desea Continuar?");
        $("#txt_idborrar").text(id_ticket);
    }

    function Eliminar() {
        id_ticket = $("#txt_idborrar").text();
        $.ajax({
            url: "/Tickets/Eliminar/",
            async: true,
            dataType: "json",
            data: '{id:' + id_ticket + '}',
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $('#Form_DeleteTipo').modal('hide');
                swal({ title: "Tickets", text: "Se elimino Correctamente", type: "success" }, function () { Cargar_Tickets(); });
            },
            error: function (request, status, error) {
                console.log("error" + error);
            }
        });
    }

