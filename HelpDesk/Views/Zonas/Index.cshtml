
@{
    ViewBag.Title = "Index";
}

<!--Contenido-->
<div class="row">
    <div class="col-md-12">
        <div class="box">
            <!--header -->
            <div class="box-header with-border">
                <h1 class="box-title">
                    Zonas                   
                </h1>
                <div class="box-tools pull-right">
                    <button class="btn btn-primary" onclick="Agregar()" id="btnAgregar">
                        <i class="fa fa-plus-circle"></i> Agregar
                    </button>
                </div>
            </div>
            <!-- Fin header -->
            <!-- body -->
            <div class="panel-body table-responsive" id="secc_lista">
                <div class="card-box">
                    <table id="Lista_Zonas" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Opciones</th>
                                <th>Nombre</th>
                                <th>Descripcion</th>
                                <th>Foto</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

            <div class="panel-body" id="secc_add" style="display:none;">
                <input type="text" id="id" value="" hidden />
                
                <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <label>Nombre *</label>
                    <input type="text" class="form-control" name="Zona" id="txt_Nombre" maxlength="100" required>
                    <label>Descripción *</label>
                    <input type="text" class="form-control" name="Zona" id="txt_Descripcion" maxlength="100" required>
                </div>
                @*<div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
                   
                </div>*@     
                <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <center>
                        <p id="imgBase64" style="display: none;"></p>
                        <img class="img-circle fa-border" src="~/Content/img/IconUser.png" alt="" id="imagen" width="30%;" height="30%;" />
                        <br />
                        <br />
                        <div class="btn btn-primary btn-file">
                            <i class="fa fa-paperclip"></i> Seleccionar foto
                            <input type="file" id="subirImagen" name="attachment" onchange="ConvertirImagen()">
                        </div>
                    </center>
                </div>           
                <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-primary" type="submit" id="btnGuardar" onclick="Guardar()">
                        <i class="fa fa-save"></i> Guardar
                    </button>                    
                    <button class="btn btn-default" onclick="Cancelar()" type="button">
                        <i class="fa fa-arrow-circle-left"></i> Cancelar
                    </button>
                </div>                
            </div>
            <!--Fin body -->
        </div><!-- /.box -->
        <!-- Modal Eliminar -->
        <div class="modal fade" id="Form_DeleteTipo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="mensaje_modal">Eliminar Zona</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body ">
                        <form role="form" data-toggle="validator">
                            <h4 id="lbl_msjborrar"></h4>
                            <span id="txt_idborrar" style="display:none;"></span>
                        </form>

                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" onclick="Eliminar(); return false;"><i class="fa fa-check" aria-hidden="true"></i> SÍ</button>
                        <button class="btn btn-danger" onclick="Cancelar()" ; return false;" data-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i> NO</button>
                    </div>
                </div>
            </div>
        </div>

    </div><!-- /.col -->
</div><!-- /.row -->
<!--Fin-Contenido-->

<script>

    $(document).ready(function () {
        $('#Lista_Zonas').DataTable();
        Cargar_Zonas();
    });

    function Cargar_Zonas() {
        $('#Lista_Zonas').DataTable({
            destroy: true,
            searching: true,
            "ajax": {
                "url": "/Zonas/GetZonas/",
                "type": "GET"
            },
            "columns": [
                { "defaultContent": "<i>..</i>" },                
                { "data": "nombre" },
                { "data": "descripcion" },
                { "defaultContent": "" },
            ],
            "columnDefs": [
                {
                    "targets": 0, "data": "id_zona", "render": function (data, type, full, meta) {
                        return "<button type='button' title='Editar' id='btn_mas" + data + "' class='btn btn-primary' onclick='Editar(" + data + ")'  ><i class='fa fa-edit'></i></button>  <button type='button' title='Eliminar' id='btn_borrar" + data + "' class='btn btn-primary' onclick='Confirma_Eliminar(" + data + ")'><i class='fa fa-trash'></i></button> "
                    }
                },
                {
                    "targets": 3, "data": "imagen", "render": function (data, type, full, meta) {
                        if (data != null) {
                            var url = "data:image/png;base64,"+data;
                            return "<img class='fa-border' src=" + url + " width='60px;' height='50px;' />"
                        } else {
                            return "<p></p>"
                        }

                    }
                }
            ]
        });
    }

    function Agregar() {
        $("#secc_lista").hide();
        $("#secc_add").show();
        $("#btnAgregar").hide();
        Limpiar();
    }

    function Cancelar() {
        $("#secc_lista").show();
        $("#btnAgregar").show();
        $("#secc_add").hide();
    }

    function Limpiar() {
        $("#id").val("");
        $("#txt_Nombre").val("");
        $("#txt_Descripcion").val("");
        $("#imgBase64").text("");
        $("#subirImagen").val("");
        $("#imagen").attr('src', '');        
    }

    function Editar(id_zona) {
        $.ajax({
            url: "/Zonas/GetZona/",
            async: true,
            dataType: "json",
            data: '{ id:' + id_zona + '}',
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                Limpiar();
                $("#secc_lista").hide();
                $("#secc_add").show();
                $("#btnAgregar").hide();
                $("#id").val(id_zona);
                $("#txt_Nombre").val(data.data.nombre);
                $("#txt_Descripcion").val(data.data.descripcion);
                $("#imgBase64").text(data.data.imagen)
                if (data.data.imagen != "") {                    
                    $('#imagen').attr('src', 'data:image/png;base64,' + data.data.imagen);                
                }
            },
            error: function (request, status, error) {
                console.log("error" + error);
            }
        });
    }

    function Guardar() {
        Zona = {
            "id_zona": $("#id").val() == "" ? 0 : $("#id").val(),
            "nombre": $("#txt_Nombre").val(),
            "descripcion": $("#txt_Descripcion").val(),
            "imagen": $("#imgBase64").text(),
        };
        $.ajax(
        {
            url: "/Zonas/Guardar/",
            async: true,
            dataType: "json",
            data: JSON.stringify(Zona),
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                swal({ title: "Zonas", text: "Guardada Correctamente", type: "success" }, function () { Cargar_Zonas(); Cancelar(); });
            },
            error: function (request, status, error) {
                swal("Error al Guardar la Usuario");
                console.log("error" + error);
            }
        });
    }

    function ConvertirImagen() {       
        var archivoImagen = document.getElementById("subirImagen").files;
        if (archivoImagen.length > 0) {
            var archivoCargar = archivoImagen[0];
            var archivoLeer = new FileReader();

            archivoLeer.onload = function (eventoCargarArchivo) {
                var srcData = eventoCargarArchivo.target.result; //Imagen base64
                //alert(srcData);
                var Logo = srcData.split(',')[1];
                //alert(Logo)
                document.getElementById("imagen").src = srcData;
                document.getElementById("imgBase64").textContent = Logo;

            }
            archivoLeer.readAsDataURL(archivoCargar);
        }
    }

    function Confirma_Eliminar(id_zona) {
        $('#Form_DeleteTipo').modal('show');
        $("#lbl_msjborrar").html("Se va a eliminar el Zona No. " + id_zona + ". <br/>¿Desea Continuar?");
        $("#txt_idborrar").text(id_zona);
    }

    function Eliminar() {
        id_zona = $("#txt_idborrar").text();
        $.ajax({
            url: "/Zonas/Eliminar/",
            async: true,
            dataType: "json",
            data: '{id:' + id_zona + '}',
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $('#Form_DeleteTipo').modal('hide');
                swal({ title: "Zonas", text: "Se elimino Correctamente", type: "success" }, function () { Cargar_Zonas(); });
            },
            error: function (request, status, error) {
                console.log("error" + error);
            }
        });
    }

</script>

